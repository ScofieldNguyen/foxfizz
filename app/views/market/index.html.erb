<div id="market">
  <div class="nav-pushpin-wrapper pin-top">
    <nav class="primary-color z-depth-0">
      <div class="nav-wrapper center-align row">
        <div class="nav-tabs">
          <ul class="tabs">
            <li class="tab">
              <%= link_to category_nav("Trang chá»§"), market_path,
              remote: true %>
            </li>
            
            <% @categories.each do |category| %>
            <li class="tab">
              <%= link_to category_nav(category.name), category,
              remote: true %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>

  <br/>
  <br/>
  <br/>
  <br/>

  <%= form_tag market_path, method: :get do %>
    <%= select_tag 'sort', options_from_collection_for_sorting %>

    <%= submit_tag "Sort" %>
  <% end %>

  <div class="ctn">
    <!-- Render posts as default -->
    <div id="posts" class="posts row"> 
      <%= render @posts, post_class: "s12 m6 l3" %>
    </div>

    <div id="preloader-nav" class="center-align" style="display: none">
      <%= render "shared/circle_preloader", size: "small" %>
    </div>
  
    <div id="posts-infinite-scrolling"><%= will_paginate @posts %></div>
  </div>

  
</div>