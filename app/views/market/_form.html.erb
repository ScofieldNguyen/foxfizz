<div id="market">
  <div class="navbar-fixed">
    <nav class="primary-color z-depth-0 fo-nav">
      <div class="nav-wrapper center-align row">
        <div class="nav-tabs">
          <ul class="tabs">
            <li class="tab">
              <%= link_to category_nav("Trang chủ"), market_path,
              remote: true %>
            </li>
            
            <% categories.each do |category| %>
            <li class="tab">
              <%= link_to category_nav(category.name), category,
              class: ('active' if category.id == params[:id].to_i),
              remote: true %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>      

  <div class="fixed-action-btn horizontal">
    <%= link_to "", new_post_path, class: "new tooltipped",
      data: { position: "left", tooltip: "Đăng bán" } %>
  </div>

  <br/>
  <br/>
  <br/>
  <br/>

  <div id="preloader-nav" class="center-align"></div>

  <div id="posts" class="row ctn">
    <%= render @posts %>
  </div>
  
  <div id="infinite-scrolling"><%= will_paginate @posts %></div>

</div>
