<header>
  <h3>Listing Products</h3>

  <div class="fixed-action-btn horizontal">
    <%= link_to "New Product", new_product_path, class: "new" %>
  </div>
</header>

<div id="products" class="row">
<% @products.each do |product| %>
  <% rand_color = product.color %>
  <div class="col s12 m6 l4">
    <div class="card hoverable"> 
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag product.attachments.first.file.url,
          class: "activator responsive-img" if product.attachments.any? %>
      </div>
      <%= link_to product do %>
        <div class="card-content" style="background: <%= rand_color %>">
          <%= product.name %>
        </div>
      <% end %>
      <div class="card-reveal">
        <span class="card-title" style="background: <%= rand_color %>">
          <%= product.name %><i class="material-icons right">close</i>
        </span>
        <p><%= truncate product.description, length: 250 %></p>
        <span class="fixed-icon-bottom-right">
          <%= link_to "See more", product %>
        </span>
      </div>
    </div>
  </div>
<% end %>
</div>