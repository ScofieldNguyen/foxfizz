<%= simple_form_for product, html: { multipart: true,
  id: 'attachments-dropzone', class: 'dropzone' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  
  <% Attachment.where(id: session[:attachments]).each do |attachment| %>
    <%= image_tag attachment, size: "50x50" %>
  <% end %>

  <%= f.button :button do %>
    <%= product.new_record? ? "Create" : "Update" %>
    <i class="material-icons right">send</i>
  <% end %>
<% end %>