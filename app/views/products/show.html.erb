<div class="ctn">
  <div id="product" class="card">
    <div class="right">
      <a class='dropdown-button' href='#' data-activates='action'>
        <i class="material-icons">more_vert</i></a>

    <!-- Dropdown Structure -->
    <ul id='action' class='dropdown-content'>
      <li class="edit"><%= link_to "Sá»­a", [:edit, @product] %></li>
      <li class="delete"><%= link_to "Gá»¡", @product, method: :delete,
        data: { confirm: "Are you sure?" } %></li>
    </ul>
    </div>
    <header>
      <h4><%= @product.name %></h4>
    </header>
    <div class="divider"></div>

    <div class="row">
      <div class="col s12 m6 l6">
        <div id="slider" class="flexslider">
          <ul class="slides">
            <% @product.attachments.each do |attachment| %>
              <li><%= image_tag attachment.file.url, class: "zoom-in responsive-img" %></li>
            <% end %>
          </ul>
        </div>
        <div id="carousel" class="flexslider">
          <ul class="slides">
            <% @product.attachments.each do |attachment| %>
              <li><%= image_tag attachment.file.url,
                class: "responsive-img" %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col s12 m6 l6">
        <p>Adress: <%= @product.address %></p>
        <p><%= simple_format(@product.description) %></p>
        <p>
        <%= @product.latitude %>, <%= @product.longitude %>
        </p>
      </div>
    </div>
  </div>
</div>
