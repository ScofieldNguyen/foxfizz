<div class="col <%= post_class %> <%= 'sold' if post.sold? %>">
  <%= link_to post, class: 'non-waves-effect' do %>
  <div class="card post ">
    <div class="img-with-overlay valign-wrapper">
      <%= image_tag post.first_attachment,
        class: "responsive-img valign" %>
      
      <div class="overlay">
        <div class="overlay-bg"></div>
        <div>
          <%= material_icon_of "location_on", class: "tiny" %> 
          <%= post.address %>
        </div>

        <% if location_coordinates %>
          <div class="small-text">
            (khoáº£ng <%= post.distance_from(location_coordinates).round(1) %> km)
          </div>
        <% end %>
        
        <br/>
        
        <div>
          <%= material_icon_of "access_time", class: "tiny" %> 
          <%= date_or_time_ago_in_words post.created_at %>
        </div>
      </div>
    </div>

    <div class="divider"></div>
    <div class="post-details">
      <div class="right post-price"><%= number_to_currency post.price %></div>
      <div class="post-title"><%= post.title %></div>
    </div>
  </div>
  <% end %>
</div>