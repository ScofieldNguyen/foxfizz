<%= title("Các tin yêu thích") %>

<div class="container">
  <h5 class="card-panel primary-color white-text">
    <%= link_to current_user.name, user_profile_path(current_user.username),
      class: "breadcrumb" %>
    <a class="breadcrumb">Các tin yêu thích</a>
  </h5>

  <% if @favorite_posts.blank? %>
    <p class="center-align"></p>
    <br>
    <h6 class="center-align">Hiện tại chưa có tin yêu thích.</h6>
  <% else %>
    <div class="row posts">
      <%= render @favorite_posts, post_class: "s12 m6 l4" %>
    </div>
  <% end %>
  
  <div class="center-align">
    <%= will_paginate @favorite_posts %>
  </div>
</div>
